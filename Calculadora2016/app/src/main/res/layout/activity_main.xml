<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cepgranada.calculadora2016.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tvVisor"
        android:textSize="50sp"
        android:textStyle="normal"
        android:background="#dadada"
        android:layout_alignParentRight="true"
        android:textAlignment="viewEnd"
        android:text="@string/visor_por_defecto" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvVisor">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvVisor"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/bt7"
                android:text="7"
                android:onClick="btNumerico"
                style="@style/stlBoton" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt8"
                android:text="8"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt9"
                android:text="9"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/btMas"
                android:text="+"
                android:onClick="botonOperador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvVisor"
            android:layout_alignParentStart="true" >

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt4"
                android:text="4"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt5"
                android:text="5"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt6"
                android:text="6"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/btMenos"
                android:text="-"
                android:onClick="botonOperador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvVisor"
            android:layout_alignParentStart="true" >

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt1"
                android:text="1"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt2"
                android:text="2"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt3"
                android:text="3"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/signoIgual"
                android:text="="
                android:onClick="botonIgual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvVisor"
            android:layout_alignParentStart="true" >

            <Button
                style="@style/stlBoton"
                android:id="@+id/btC"
                android:text="C"
                android:onClick="botonBorrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/bt0"
                android:text="0"
                android:onClick="btNumerico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/btMultiplicacion"
                android:text="X"
                android:onClick="botonOperador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/stlBoton"
                android:id="@+id/btDivision"
                android:text="/"
                android:onClick="botonOperador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
